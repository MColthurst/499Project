<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_margin="5dip">

	<TextView
	    android:id="@+id/seat_name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="15dip"
	    android:layout_marginTop="5dip"
	    android:lines="1"
	    android:text="A Long Movie Title"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="30dip" >

</TextView>

	<TextView
	    android:id="@+id/seat_rating"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:text="Rating: 9.8/10"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="16dip" >

</TextView>

	<TextView
	    android:id="@+id/seat_price"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/seat_name"
	    android:layout_below="@+id/seat_name"
	    android:text="Medium Text"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
